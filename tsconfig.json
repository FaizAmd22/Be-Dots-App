{
   "compilerOptions": {
     "lib": ["ES2015"],
     "target": "ES2015",
     "module": "CommonJS",
     "moduleResolution": "node",
     "outDir": "./build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "strict": true,
     "esModuleInterop": true,
     "skipLibCheck": true
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "build"]
 }
 